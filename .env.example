BOT_NAME=TKT-CYBER-AI
PREFIX=!
OWNER_NUMBER=
PASTEBIN_RAW_URL=https://pastebin.com/raw/ABCsz...
SESSION_FILE=./vesperr
PLUGINS_DIR=./plugins

# Database Configuration
DB_TYPE=sqlite
DB_PATH=./data/vesperr.db
# For PostgreSQL, uncomment and configure:
# DB_TYPE=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=vesperr
# DB_USER=postgres
# DB_PASSWORD=your_password

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs
LOG_MAX_FILES=14d

# AI Configuration (Optional - for AI plugin)
GOOGLE_AI_API_KEY=
OPENAI_API_KEY=

# Weather API (Optional - for weather plugin)
OPENWEATHER_API_KEY=

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=10
RATE_LIMIT_WINDOW_MS=60000

# Health Check Server
HEALTH_CHECK_PORT=3000
HEALTH_CHECK_ENABLED=true

# Features
ENABLE_ANALYTICS=true
ENABLE_AUTO_RECONNECT=true

# Security
MAX_MESSAGE_LENGTH=10000
ALLOWED_FILE_TYPES=image,video,audio,document
