{
  "name": "TKT-CYBER-AI",
  "version": "2.0.0",
  "description": "Professional WhatsApp bot with AI, plugins, database, and advanced features",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "docker:build": "docker build -t vesperr-bot .",
    "docker:run": "docker run -d --env-file .env vesperr-bot",
    "docker:compose": "docker-compose up -d"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "baileys",
    "plugins",
    "ai",
    "chatbot",
    "automation"
  ],
  "author": "midknightmantra",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.2.1",
    "@whiskeysockets/baileys": "^6.5.0",
    "axios": "^1.6.2",
    "better-sqlite3": "^9.2.2",
    "cfonts": "^3.3.1",
    "cron": "^3.1.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "joi": "^17.11.0",
    "node-cache": "^5.1.2",
    "pino": "^8.16.2",
    "qrcode-terminal": "^0.12.0",
    "sharp": "^0.33.1",
    "translate": "^3.0.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "ytdl-core": "^4.11.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
